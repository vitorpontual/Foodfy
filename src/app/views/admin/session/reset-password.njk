{% extends '../layout.njk'%}
{% block header %}
   {% include '../parts/session-header.njk'%}
{% endblock header%}

{% block content %}
   <section class="reset container">
      <form action="/admin/reset-password" method='POST'>
	 <div class="header">
	    <h4>Recuperação de Senha</h4>
	 </div>
	 <div class="fields">
	    <div class="item">
	       <div>Email</div>
	       <div class="input">
		  <input type="email" name='email' placeholder='Digite seu email' value='{{user.email}}' onblur='Validate.apply(this, "isEmail")'>
	       </div>
	    </div>

	    <div class="item">
	       <div>Nova Senha</div>
	       <div class='input'>
		  <input type="password" name='password' placeholder='Digite sua nova senha'>
	       </div>
	    </div>

	    <div class="item">
	       <div>Repetir Senha</div>
	       <div class="input">
		  <input type="password" name='passwordRepeat' placeholder='Repita a nova senha'>
	       </div>
	    </div>
	    <input type="hidden" name='token' value='{{token}}'>
	 </div>

	 <button class="button" type='submit'>Nova Senha</button>
      </form>
   </section>

{% endblock content%}
