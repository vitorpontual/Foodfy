{% extends '../layout.njk' %}
{% block header %}
   {% include '../parts/session-header.njk'%}
{% endblock header%}

{% block content %}
   <section class="forgot container">
      <form action="/admin/forgot-password" method='POST'>
	 <div class="header">
	    <h3>Esqueceu a senha</h3>
	 </div>
	 <div class="fields">
	    <div class="item">
	       <div>Email</div>
	       <div class="input">
		  <input 
		    type="email" 
		    name='email' 
		    placeholder='Digite o email Cadastrado' 
		    value='{{user.email}}' 
		    onblur='Validate.apply(this, "isEmail")'>
	       </div>
	    </div>

	    <button class="button" type='submit'>Recuper</button>
	 </div>
      </form>
   </section>
{% endblock content%}
