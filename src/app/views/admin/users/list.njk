{% extends '../layout.njk' %}

{%block content %}

   <section class="users container">
      <div class="header">
	 <h1>Usu√°rio</h1>
	 <a class='button' href="/admin/create">Novo</a>
      </div>
      <div class="cards">
	 {% for user in users%}
	    <div class="card">
	       <h4>{{user.name}}</h4>
	       <p>{{user.email}}</p>
	       <div class="container">
		  <a href="/admin/users/{{user.id}}">Editar</a>
		  <form onsubmit='checkRemove(event)' action="/admin/users?_method=DELETE" method='POST'>
		     <input type="hidden" name='id' value={{user.id}}>
		     {% if session.isAdmin %}
		     <button type='submit'>Remove</button>
		     {% endif %}
		  </form>
	       </div>
	    </div>
	 {% endfor %}
      </div>


   </section>

{% endblock content%}
