{% extends '../layout.njk' %}

{% block content %}

   <section class="users container">
      <div class="header">
	 <h1>Usu√°rio</h1>
	 {% if session.isAdmin == true %}
	 <a class='button' href="/admin/create">Novo</a>
	 {% endif %}
      </div>
      <div class="cards">
	 {% for user in users%}
	    <div class="card">
	       <form onsubmit='checkRemove(event)' id='{{user.email}}'action="/admin/users?_method=DELETE" method='POST'>
		  <input type="hidden" name='id' value={{user.id}}>
	       </form>
	       <h4>{{user.name}}</h4>
	       <p>{{user.email}}</p>
	       <div class="container">
		  <a href="/admin/users/{{user.id}}">Editar</a>
		  <button form='{{user.email}}' type='submit'>Remove</button>
	       </div>
	    </div>
	 {% endfor %}
      </div>


   </section>

{% endblock content%}
