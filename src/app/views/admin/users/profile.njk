{% extends '../layout.njk' %}

{% block content %}
   <section class="profile container">
      <form action="/admin/profile?_method=PUT" method='POST'>
	 <div class="header">
	    <h4>Bem vindo {{user.firstName}}</h4>
	    <button type='submit' class='button'>Salvar</button>
	 </div>

	 <div class="fields">
	    {% include './fields-users.njk'%}
	    <input type="hidden" id='id' value='{{user.id}}'>
	 </div>
      </form>
   </section>
{% endblock content%}
