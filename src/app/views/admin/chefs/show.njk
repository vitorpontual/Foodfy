{% extends '../layout.njk' %}

{% block content %}

   <section class="container chef">
      <div class=header>
	 <h1>Chef: {{chefs.name.split(' ')[0]}}</h1>
	 <button class="add-chef-button" onclick='window.location.href="/admin/chefs/{{chefs.id}}/edit"' type='submit'>Editar Chef</button>
      </div>

      <div class="profile">
	 <div class='avatar'>
	    <img src="{{chefs.img}}" alt="{{chefs.name}}">
	 </div>
	 <h1>{{chefs.name}}</h1>
	 <h2>{{chefs.recipeCount}} Receitas</h2>
      </div>

      <div class="recipes">
	 <h1>Receitas encontradas</h1>
	 <div class="cards">
	 {% for recipe in recipesChefs %}
	    <div class="card">
	       <div>
		  <img src="{{recipe.img}}" alt="{{recipe.title}}">
	       </div>
	       <div>
		  <h1>{{recipe.title}}</h1>
		  <h2>por {{chefs.name}}</h2>
		  <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
	       </div>
	    </div>
	 {% endfor %}
	 </div>
   </section>

{% endblock content %}
