{% extends '../layout.njk' %}

{% block content %}
   <section class="container edit-chef">

      <div class="header">
	 <h1>Editando Chef</h1>
	 <div class="buttons">
	    <button form='form-delete' class='delete-button' type='submit'>Deletar</button>
	    <button form='form-put' class='add-chef-button' type='submit'>Salvar Chef</button>
	 </div>
      </div>

      <form id="form-delete" action="/admin/chefs?_method=DELETE" method='POST' onsubmit='checkRecipes(event)'>
	 <input type="hidden" name='id' value='{{chefs.id}}'>
	 <input id='total' type="hidden" value='{{chefs.total_recipes}}'>
	 {% for image in files.src %}
	    <input type="hidden" name="file_id" value='{{image.id}}'>
	 {% endfor%}
      </form>

      <form id="form-put" action="/admin/chefs?_method=PUT" method='POST' enctype='multipart/form-data'>
	 <div class="chefs-fields">
	    {% include '../parts/fields-chef.njk'%}
	   

	    <input type="hidden" name='file_id' value={{chefs.file_id}}>
	    <input type="hidden" name='id' value={{chefs.id}}>
	 </div>
      </form>
   </section>

   {% include "../script.njk" %}
{% endblock content %}

