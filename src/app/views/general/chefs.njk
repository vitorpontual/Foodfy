{% extends './layout.njk' %}

{% block content %}
   <section class="chef container">
	 {% for chef in chefs %}
	 <div class="card">
	    <img src="{{chef.img}}" alt="{{chef.name}}">
	    <div>
	       <h2>{{chef.name}}</h2>
	       <p>{{chef.total_recipes}} Receitas</p>
	    </div>
	 </div>
	 {% endfor %}
   </section>
{% endblock content %}
